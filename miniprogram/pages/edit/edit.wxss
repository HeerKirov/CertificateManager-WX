.panel {
  margin-top: 12rpx;
  margin-bottom: 100rpx;
  width: 90%;
}
.submit-btn {
  position: fixed;
  bottom: 15rpx;
  height: 90rpx;
  width: 90%;
}
.field {
  position: relative;
  min-height: 14px;
}
.space {
  height: 30rpx;
  width: 100%;
}
.field .label {
  width: 25%;
  font-size: 14px;
  color: #555555;
  position: absolute;
  padding: 9px;
}
.field .content {
  width: 75%;
  position: relative;
  left: 25%;
  font-size: 14px;
}
.field .content .line {
  padding: 9px;
}
.field .content .remove-btn {
  font-size:10px;
  height:20px;
  position:relative;
  top:4px;
}
.image-fields {
  width: 100%;
  height: 320rpx;
}
.image-field {
  float: left;
  width: 33%;
}
.image-field .title {
  width: 100%;
  color: #555555;
  font-size: 11px;
}
.image-field .image {
  width: 100%;
  padding: 4rpx;
  max-height: 320rpx;
}

.input {
  margin: 4px 0;
  padding: 4px;
  background-color: #ffffff;
  border-width: 1px;
  border-style: solid;
  border-color: #ccc;
  border-radius: 4px;
}

.field .status.waiting {color: #999}
.field .status.passed {color: #090}
.field .status.not-pass {color: #f00}

.cover {
  position: fixed; 
  height: 100%;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  top: 0;
  left: 0;
  z-index: 2;
}
.loading {
  position: fixed; 
  height: 100%;
  width: 100%;
  background-color: rgba(255, 255, 255, 0.5);
  top: 0;
  left: 0;
  z-index: 2;
  text-align: center;
  padding-top: 300rpx
}
.box {
  background-color: #fff;
  position: fixed;
  height: 50%;
  width: 90%;
  left: 0;
  top: 25%;
  margin: 0 1.5%;
  padding: 25rpx;
  border-width: 1px;
  border-style: solid;
  border-color: #ccc;
  border-radius: 4px;
}
.box .close-btn {
  position: absolute;
  right: 25rpx;
  top: 25rpx;
}
.box .scroll-view {
  height: 75%
}
.text {
  font-size: 14px;
}